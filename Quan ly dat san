<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý đặt sân bóng</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        .container {
            max-width: 600px;
            margin: auto;
        }
        .field-btn {
            margin: 5px;
            padding: 10px;
            cursor: pointer;
            border: none;
            background-color: lightgray;
        }
        .field-btn.active {
            background-color: blue;
            color: white;
        }
        .booking-list {
            margin-top: 20px;
            padding: 10px;
            border: 1px solid #ccc;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Quản lý đặt sân bóng</h1>
        <h2>Chọn sân</h2>
        <div id="field-buttons">
            <button class="field-btn" onclick="selectField(1)">Sân A</button>
            <button class="field-btn" onclick="selectField(2)">Sân B</button>
            <button class="field-btn" onclick="selectField(3)">Sân C</button>
        </div>
        <h2>Chọn ngày</h2>
        <input type="date" id="date-picker">
        <button onclick="bookField()">Đặt sân</button>
        <h2>Lịch đặt sân</h2>
        <div id="booking-list" class="booking-list">Chưa có lịch đặt.</div>
    </div>
    
    <script>
        let selectedField = null;
        let bookings = [];

        function selectField(fieldId) {
            selectedField = fieldId;
            document.querySelectorAll('.field-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.field-btn')[fieldId - 1].classList.add('active');
        }

        function bookField() {
            const date = document.getElementById('date-picker').value;
            if (!selectedField || !date) {
                alert('Vui lòng chọn sân và ngày đặt!');
                return;
            }
            bookings.push({ field: selectedField, date });
            updateBookingList();
        }

        function updateBookingList() {
            const bookingList = document.getElementById('booking-list');
            if (bookings.length === 0) {
                bookingList.innerHTML = 'Chưa có lịch đặt.';
            } else {
                bookingList.innerHTML = bookings.map(b => `Sân ${b.field} - ${b.date}`).join('<br>');
            }
        }
    </script>
</body>
</html>
