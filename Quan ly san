<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hệ Thống Quản Lý Sân Bóng</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Hệ Thống Quản Lý Sân Bóng</h1>
        
        <nav class="nav nav-pills mb-4">
            <a class="nav-link active" href="#" onclick="showSection(event, 'viewFields')">Xem Danh Sách Sân</a>
            <a class="nav-link" href="#" onclick="showSection(event, 'checkFieldStatus')">Kiểm Tra Tình Trạng Sân</a>
            <a class="nav-link" href="#" onclick="showSection(event, 'mergeFields')">Ghép Sân</a>
            <a class="nav-link" href="#" onclick="showSection(event, 'updateFieldStatus')">Cập Nhật Trạng Thái Sân</a>
        </nav>

        <div id="viewFields" class="section">
            <h2>Xem Danh Sách Sân</h2>
            <input type="text" class="form-control mb-3" id="searchField" placeholder="Tìm kiếm sân..." onkeyup="searchField()">
            <ul class="list-group mt-3" id="fieldList">
                <script>
                    for (let i = 1; i <= 10; i++) {
                        document.write(`<li class='list-group-item' data-field='Sân ${i}'>Sân ${i} - <span class='status'>Sẵn sàng</span></li>`);
                    }
                </script>
            </ul>
        </div>

        <div id="checkFieldStatus" class="section d-none">
            <h2>Kiểm Tra Tình Trạng Sân</h2>
            <select class="form-select mb-3" id="fieldSelect" onchange="updateStatus()">
                <option value="">Chọn sân</option>
                <script>
                    for (let i = 1; i <= 10; i++) {
                        document.write(`<option value='Sân ${i}'>Sân ${i}</option>`);
                    }
                </script>
            </select>
            <p class="mt-3">Trạng thái: <strong id="fieldStatus">Chưa chọn</strong></p>
        </div>

        <div id="mergeFields" class="section d-none">
            <h2>Ghép Sân</h2>
            <p>Chọn số lượng sân muốn ghép:</p>
            <button class="btn btn-secondary" onclick="mergeFields(2)">Ghép 2 Sân Mini</button>
            <button class="btn btn-secondary" onclick="mergeFields(4)">Ghép 4 Sân Mini</button>
            <p class="mt-3" id="mergeResult"></p>
        </div>

        <div id="updateFieldStatus" class="section d-none">
            <h2>Cập Nhật Trạng Thái Sân</h2>
            <select class="form-select mb-3" id="updateFieldSelect">
                <option value="">Chọn sân</option>
                <script>
                    for (let i = 1; i <= 10; i++) {
                        document.write(`<option value='Sân ${i}'>Sân ${i}</option>`);
                    }
                </script>
            </select>
            <select class="form-select mb-3" id="newStatus">
                <option value="">Chọn trạng thái</option>
                <option value="Đang sử dụng">Đang sử dụng</option>
                <option value="Bảo trì">Bảo trì</option>
                <option value="Sẵn sàng">Sẵn sàng</option>
            </select>
            <button class="btn btn-success" onclick="updateFieldStatus()">Cập Nhật</button>
            <p class="mt-3" id="updateResult"></p>
        </div>
    </div>

    <script>
        function showSection(event, sectionId) {
            event.preventDefault();
            document.querySelectorAll('.section').forEach(section => section.classList.add('d-none'));
            document.getElementById(sectionId).classList.remove('d-none');
            document.querySelectorAll('.nav-link').forEach(link => link.classList.remove('active'));
            event.target.classList.add('active');
        }

        function searchField() {
            let input = document.getElementById('searchField').value.toLowerCase();
            let fields = document.querySelectorAll('#fieldList li');
            fields.forEach(field => {
                if (field.textContent.toLowerCase().includes(input)) {
                    field.style.display = "block";
                } else {
                    field.style.display = "none";
                }
            });
        }

        function updateStatus() {
            let field = document.getElementById('fieldSelect').value;
            let statusElement = document.querySelector(`#fieldList li[data-field='${field}'] .status`);
            document.getElementById('fieldStatus').textContent = statusElement ? statusElement.textContent : "Chưa chọn";
        }

        function mergeFields(number) {
            document.getElementById('mergeResult').textContent = `Đã ghép thành công ${number} sân mini.`;
        }

        function updateFieldStatus() {
            let field = document.getElementById('updateFieldSelect').value;
            let status = document.getElementById('newStatus').value;
            if (field && status) {
                let fieldElement = document.querySelector(`#fieldList li[data-field='${field}'] .status`);
                if (fieldElement) {
                    fieldElement.textContent = status;
                    document.getElementById('updateResult').textContent = `Sân ${field} đã được cập nhật trạng thái: ${status}`;
                }
            } else {
                document.getElementById('updateResult').textContent = "Vui lòng chọn sân và trạng thái mới.";
            }
        }
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
